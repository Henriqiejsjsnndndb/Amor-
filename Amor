# Fun√ß√£o para executar comandos no terminal e capturar sa√≠da
def run_command(command):
    try:
        result = subprocess.run(command, shell=True, check=True, text=True, capture_output=True)
        print(result.stdout)
    except subprocess.CalledProcessError as e:
        print(f"Erro ao executar '{command}': {e.stderr}")

# Atualiza pacotes no Termux
print("Atualizando pacotes no Termux...")
run_command("pkg update -y && pkg upgrade -y")

# Verifica se o Node.js est√° instalado; se n√£o, instala
if subprocess.run("command -v node", shell=True, capture_output=True).returncode != 0:
    print("Instalando Node.js...")
    run_command("pkg install nodejs -y")
else:
    print("Node.js j√° est√° instalado.")

# Cria a pasta coracoes_auto
folder = "coracoes_auto"
os.makedirs(folder, exist_ok=True)
os.chdir(folder)
print(f"Diret√≥rio '{folder}' criado e acessado.")

# Cria o arquivo index.html
with open("index.html", "w", encoding="utf-8") as f:
    f.write(html_content)
print("Arquivo index.html criado com sucesso.")

# Instala o http-server se n√£o estiver instalado
if subprocess.run("command -v http-server", shell=True, capture_output=True).returncode != 0:
    print("Instalando http-server...")
    run_command("npm install -g http-server")
else:
    print("http-server j√° est√° instalado.")

# Inicia o servidor
print("Iniciando o servidor na porta 8080...")
run_command("http-server -p 8080")
